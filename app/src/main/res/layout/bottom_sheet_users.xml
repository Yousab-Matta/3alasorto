<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_top_corners"
    android:backgroundTint="@color/primary_color"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <View
        android:layout_width="50dp"
        android:layout_height="8dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_corners_15dp"
        android:backgroundTint="@color/secondary_color" />

    <TextView
        android:id="@+id/tv_edit_user_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:drawablePadding="10dp"
        android:text="@string/edit_user"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:drawableStartCompat="@drawable/ic_edit"
        app:drawableTint="@color/text_color" />


    <TextView
        android:id="@+id/tv_add_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="@string/add_points"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_add"
        app:drawableTint="@color/text_color" />

    <TextView
        android:id="@+id/tv_remove_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="@string/remove_points"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_remove"
        app:drawableTint="@color/text_color" />

    <TextView
        android:id="@+id/tv_give_admin_rights"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="@string/give_admin_rights"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:visibility="gone"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_star"
        app:drawableTint="@color/text_color" />

    <TextView
        android:id="@+id/tv_delete_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="@string/delete_user"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_delete"
        app:drawableTint="@color/text_color" />

</LinearLayout>